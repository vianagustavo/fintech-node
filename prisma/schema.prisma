generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model People {
  id String @id @default(uuid())
  name String
  document String
  password String
  accounts Account[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) 

  @@map("people")
}

model Account {
  id         String          @id @default(uuid())
  branch     String
  account    String
  accountBalance Float
  people     People         @relation(fields: [peopleId], references: [id])
  peopleId   String
  cards      Card[]
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @default(now())

  @@map("accounts")
}

model Card {
  id          String          @id @default(uuid())
  number      String
  cvv         String
  type        CardType
  account     Account         @relation(fields: [accountId], references: [id])
  accountId   String
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @default(now())

  @@map("cards")
}

enum CardType {
  PHYSICAL
  VIRTUAL
}
